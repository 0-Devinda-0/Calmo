<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/card_view"
    android:layout_height="85dp"

    >




    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/custom_list_background" />

    <TextView
        android:id="@+id/studentListName"
        android:layout_width="217dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="33dp"
        android:maxLines="1"
        android:text="sample Text"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/examPic24"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="33dp"
        app:srcCompat="@drawable/icon_background" />

    <ImageView
        android:id="@+id/examPic2"
        android:layout_width="20dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="33dp"
        app:srcCompat="@drawable/baseline_highlight_off_24" />

    <TextView
        android:id="@+id/studentIdView"
        android:layout_width="89dp"
        android:layout_height="15dp"
        android:layout_alignEnd="@+id/studentListName"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="16dp"
        android:text="Student ID"
        android:textSize="13dp" />


</RelativeLayout>