<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/card_view"
    android:layout_height="80dp"
    android:background="@drawable/custom_list_background">


    <TextView
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/border2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="1dp"
        android:background="#808080" />

    <TextView
        android:id="@+id/examName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/border2"
        android:layout_alignEnd="@+id/border2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="25dp"
        android:maxLines="1"
        android:text="First Exam"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/examPic2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_above="@+id/border2"
        android:layout_alignEnd="@+id/border2"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="27dp"
        app:srcCompat="@drawable/baseline_check_circle_24" />


</RelativeLayout>